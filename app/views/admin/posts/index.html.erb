<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('.subject') %></th>
      <th><%= t('.author') %></th>
      <th><%= t('.comments') %></th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| -%>
    <tr>
      <td><%= post.subject %></td>
      <td><%= post.author.full_name %></td>
      <td><%= post.comments.count %></td>
    </tr>
  <% end -%>
  </tbody>
</table>