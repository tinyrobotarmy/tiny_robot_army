.row
  .col-md-2
  .col-md-8
    %h2
      User Details
    %dl.dl-horizontal
      %dt Email
      %dd= @user.email
      %dt First Name
      %dd= @user.first_name
      %dt Last Name
      %dd= @user.last_name
    .links
      = link_to 'Edit', edit_admin_user_path(@user), class: 'btn btn-primary'
      = link_to 'Back', admin_users_path, class: 'btn btn-default'
  .col-md-2
