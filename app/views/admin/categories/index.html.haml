%h1 Listing categories

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Slug
      %th Description
      %th Posts
      %th
  %tbody
    - @categories.each do |category|
      %tr
        %td= category.title
        %td= link_to category.slug, admin_category_path(category)
        %td= truncate(category.description, length: 20)
        %td= category.posts.count
        %td
          = link_to raw('<i class="icon-edit"></i>'), edit_admin_category_path(category)
          = link_to raw('<i class="icon-trash"></i>'), admin_category_path(category), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Category', new_admin_category_path
