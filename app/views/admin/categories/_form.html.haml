= simple_form_for [:admin, category] do |f|
  = content_for :message_box do
    = render 'shared/errors', :object => f.object
  = f.input :title
  = f.input :slug
  = f.input :description
  .fomr-actions
    = f.submit 'Save', class: 'btn btn-success'
    = link_to 'Cancel', admin_categories_path, class: 'btn'
